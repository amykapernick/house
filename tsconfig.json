{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "verbatimModuleSyntax": true,
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "types": [
      "node",
      "astro/client"
    ],
    "paths": {
      "@components/*": [
        "src/components/*.astro"
      ],
      "@ts/*": [
        "src/types/*"
      ],
      "@fonts/*": [
        "src/fonts/*"
      ],
      "@partials/*": [
        "src/partials/*.astro"
      ],
      "@img/*": [
        "src/img/*"
      ],
      "@pages/*": [
        "src/pages/*.astro"
      ],
      "@styles/*": [
        "src/styles/*",
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@layouts/*": [
        "src/layouts/*.astro"
      ],
      "@data/*": [
        "_data/*"
      ],
      "@react/*": [
        "src/react/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@auth/*": [
        "src/components/auth/*.astro"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}