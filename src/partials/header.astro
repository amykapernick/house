---
import type { MenuItem } from "@ts/global";

const menuItems: MenuItem[] = [
  {
	label: 'Home',
	link: '/',
  },
  {
	label: 'Recipes',
	link: '/recipes',
  },
  {
	label: 'Meal Planner',
	link: '/meals/planning'
  },
  {
	label: 'Shopping List',
	link: '/meals/list'
  }
]; 
---

<style>
	header {

		@mixin container_spacing;

		display: flex;
		flex-wrap: wrap;
		align-items: center;
		justify-content: space-between;
		font-size: 1.2em;
		font-weight: 700;
	}
 
	.title {
		display: block;
		font-size: 3em;
		text-decoration: none;
	}

	nav {
		& ul {
			display: flex;
			flex-wrap: wrap;
			justify-content: center;
			margin: -10px;
			padding: 0;
		}

		& li {
			margin: 10px;
		}

		& a {
			padding: 10px;
		}
	}
</style>

<header>
	<a href="/" class="title">üè°</a>
	  <nav>
		<ul>
			{menuItems.map(({label, link}) => (
				<li>
					<a href={link}>{label}</a>	
				</li>
			))}
		</ul>
	</nav>
</header>
